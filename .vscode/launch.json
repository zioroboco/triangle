{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "chrome",
      "type": "pwa-chrome",
      "request": "attach",
      "port": 9222,
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "firefox",
      "type": "firefox",
      "request": "attach",
      "url": "http://localhost:8080",
      "pathMappings": [
        {
          "url": "webpack:///client",
          "path": "${workspaceFolder}/client"
        }
      ]
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "lldb: test",
      "cargo": {
        "args": ["test", "--no-run"],
        "filter": {
          "name": "triangle",
          "kind": "cdylib"
        }
      }
    }
  ]
}
