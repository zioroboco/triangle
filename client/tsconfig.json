{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": { "customMatcher": "\\.css$" }
      }
    ],
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "es2019",
    "jsx": "react",
    "moduleResolution": "node",
    "isolatedModules": true,
    "sourceMap": true
  },
  "include": ["./**/*"]
}
